@using Application.Dtos
@model CreateDisciplinaDto
@{
    ViewData["Title"] = "Criar Disciplina";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Criar Disciplina</h1>

<form method="post" asp-controller="Disciplina" asp-action="Create">
    <div class="input-group mb-3" style="max-width: 45rem;">
        <span for="Title" class="input-group-text">Nome</span>
        <input type="text" id="Title" name="Title" class="form-control" required>
    </div>
    <div class="input-group mb-3" style="max-width: 45rem;">
        <span class="input-group-text" for="Semestre">Semestre</span>
        <input type="text" id="Semestre" name="Semestre" class="form-control" required>
    </div>
    <div class="input-group mb-3" style="max-width: 45rem;">
        <span class="input-group-text" for="Curso">Curso</span>
        <input type="text" id="Curso" name="Curso" class="form-control" required>
    </div>
    <div class="input-group mb-3" style="max-width: 45rem;">
        <span class="input-group-text" for="Professor">Professor(a)</span>
        <input type="text" id="Professor" name="Professor" class="form-control" required>
    </div>
    <div style="display: flex; gap: 1rem; align-items: center;">
        <button type="button" class="btn btn-warning btn-sm">
            <a style="color: inherit; text-decoration: none;" asp-controller="Disciplina" asp-action="Index">
                Cancelar
            </a>
        </button>
        <div>
            <input type="submit" value="Salvar" class="btn btn-dark btn-sm" />
        </div>
    </div>
</form>
